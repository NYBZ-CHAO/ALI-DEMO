<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ali.rocket.dao.AccountInfoDao">

    <update id="updateAccountBalance">
        update account set account_balance = account_balance + #{amount} where account_no =#{accountNo}
    </update>



</mapper>